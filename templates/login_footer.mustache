{{!
    Page footer.
}}
<footer id="page-footer" class="htm-footer wrapper m-l-0" style="{{#footer}}{{bgcolor}}{{/footer}}">
    <div class="container">
        <div class="htm-footer__top">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    {{#footer}}
                        {{{text}}}
                    {{/footer}}
                </div>
                <div class="col-xs-12 col-md-4">
                    <ul class="social-links m-b-0">
                    {{#footer}}
                        {{#showicons}}
                            {{#smurls}}
                                {{#profiles}}
                                    {{> theme_sleat/sm_icon }}
                                {{/profiles}}
                            {{/smurls}}
                        {{/showicons}}
                    {{/footer}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="htm-footer__bottom">
            <div class="footnote">
                {{#footer}}
                    {{{footnote}}}
                {{/footer}}
            </div>
            {{# output.page_doc_link }}
                <p class="helplink">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
    </div>
</footer>