{{!
    Page footer.
}}
<footer id="page-footer" class="htm-footer wrapper" style="{{#footer}}background-color: {{bgcolor}};{{/footer}}">
    <div class="container">
        <div class="htm-footer__top">
            <div class="row">
                <div class="col-xs-12 col-md-4 footer-text">
                    {{#footer}}
                        <h3>{{{col1Title}}}</h3>
                        {{{col1Text}}}
                    {{/footer}}
                </div>
                <div class="col-xs-12 col-md-4 footer-text">
                    {{#footer}}
                        <h3>{{{col2Title}}}</h3>
                        {{{col2Text}}}
                    {{/footer}}
                </div>
                <div class="col-xs-12 col-md-4 footer-text">
                    {{#footer}}
                        <h3>{{{col3Title}}}</h3>
                        {{{col3Text}}}
                    {{/footer}}
                </div>
            </div>
        </div>
        <div class="htm-footer__bottom">
            <div class="footnote">
                {{#footer}}
                    {{{footnote}}}
                {{/footer}}
            </div>
            {{# output.page_doc_link }}
                <p class="helplink">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
    </div>
</footer>